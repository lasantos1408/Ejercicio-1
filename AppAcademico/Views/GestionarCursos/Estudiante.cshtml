@model IEnumerable<AppAcademico.Models.Estudiante>

@{
    ViewData["Title"] = "Estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Estudiantes</h1>

<p>
    <a asp-controller="Estudiantes" asp-action="Create">Nuevo Estudiante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarioEst)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var identif = @ViewContext.RouteData.Values["id"];
    if (item.IdCurso.ToString() == identif.ToString())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioEst)
            </td>
            <td>
                <a asp-controller="Estudiantes" asp-action="Edit" asp-route-id="@item.IdEstudiante">Editar</a> |
                <a asp-controller="Estudiantes" asp-action="Details" asp-route-id="@item.IdEstudiante">Detalle</a> |
                <a asp-controller="Estudiantes" asp-action="Delete" asp-route-id="@item.IdEstudiante">Eliminar</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>

<div>
    <a asp-controller="GestionarCursos" asp-action="Index">Regresar a los Cursos</a>
</div>