@model IEnumerable<AppAcademico.Models.Cursos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestionar cursos</h1>

<p>
    <a asp-action="Create">+ Nuevo curso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCurso)
            </th>
            <th>
                    @*@Html.DisplayNameFor(model => model.Usuario)*@
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCurso)
                </td>
                <td>
                        @*@Html.DisplayFor(modelItem => item.Usuario)*@
                    </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCurso">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCurso">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCurso">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
